@model CinemaProject.Models.Person
@{
    ViewData["Title"] = "Đăng nhập";
}
<link href="~/css/signup.css" rel="stylesheet" />
<div class="login">
    <div class="login_fb_gg">
        <div class="login_fb">
            <span>Đăng nhập bằng Facebook</span>
            <i class="fab fa-facebook"></i>
        </div>
        <div class="login_gg">
            <span>
                Đăng nhâp bằng Google
            </span>
            <i class="fab fa-google"></i>

        </div>
    </div>
    <h4 class="text-center mt-4">Hoặc</h4>
    <div class="row justify-content-center">
        <div class="col-md-12">
            <form asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="width: 520px; margin: 25px auto;">
                    <input asp-for="Email" class="form-control" placeholder="Email *" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 520px; margin: 25px auto;">
                    <input  asp-for="Password" class="form-control" placeholder="Password *" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <span class="text-danger" style="margin-left: 63px">@ViewBag.error</span>
                <div class="form-group text-center" id="loginBtn">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                    <span><a href="#">Quên mật khẩu</a></span>
                </div>
                <div class="text-center mb-5">
                    <span>Nếu chưa có tài khoản &nbsp;<a style="color: #0094ff" href="/Signup">Đăng ký</a></span>
                    
                </div>
            </form>
        </div>
    </div>
</div>