@model CinemaProject.Models.Person

@{
    ViewData["Title"] = "Đăng ký";
}

<link href="~/css/signup.css" rel="stylesheet" />

<div class="signup">
    <h4 class="text-center mt-4">Đăng ký tài khoản</h4>
    <div class="row justify-content-center">
        <div class="col-md-9">
            <form asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email *" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password *" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Fullname" class="form-control" placeholder="Fullname" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="form-group" style="font-weight: 500;">
                    <label asp-for="Gender" class="control-label">Giới tính</label>
                    <input type="radio" name="Gender" value="Nam" checked> Nam
                    <input type="radio" name="Gender" value="Nữ"> Nữ
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <span class="text-danger" style="margin-left: 27px">@ViewBag.error</span>
                <div class="form-group text-center">
                    <input type="submit" value="Đăng ký" class="btn btn-primary" />
                </div>
                <div class="text-center mb-5">
                    Nếu tài khoản đã tồn tại &nbsp;<a style="color: #0094ff" href="/Login">Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
