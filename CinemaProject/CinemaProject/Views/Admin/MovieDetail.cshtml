@{
    List<Genre> genres = (List<Genre>)ViewData["genre"];
}
@using CinemaProject.Models
@model Movie
<h1>Chi tiết phim</h1>
<h5>@ViewData["Message"]</h5>
<table class="table table-striped">
    <tbody>
        <form method="post" action="/Admin/MovieDetail">
        <tr>
            <td>Movie Id</td>
            <td><input type="text" name="MovieId" value="@Model.MovieId" readonly /></td>
        </tr>
        <tr>
            <td>Title</td>
            <td><input type="text" name="Title" value="@Model.Title" /></td>
        </tr>
        <tr>
            <td>Year</td>
            <td><input type="text" name="Year" value="@Model.Year" /></td>
        </tr>
        <tr>
            <td>Image</td>
            <td><input type="text" name="Image" value="@Model.Image" /></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><textarea name="Description">@Model.Description</textarea></td>
        </tr>
        <tr>
            <td>Genre</td>
            <td>
                <select name="GenreId">
                        @foreach (var item in genres)
                        {
                        <!option value="@item.GenreId" @(item.GenreId == Model.GenreId?"selected":"")>@item.Description</!option>
                        }
                </select>
            </td>

        </tr>
        <tr>
            <td></td>
            <td><button class="btn btn-warning">Cập nhật</button></td>
        </tr>
        </form>

    </tbody>
</table>