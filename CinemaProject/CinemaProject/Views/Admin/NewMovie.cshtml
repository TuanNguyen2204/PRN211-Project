@{
    List<Genre> genres = (List<Genre>)ViewData["genre"];

}
<h1>Thêm phim mới</h1>
<table class="table table-striped">
    <tbody>
        <form method="post" action="/Admin/NewMovie">
        <tr>
            <td>Title</td>
            <td><input type="text" name="Title" /></td>
        </tr>
        <tr>
            <td>Year</td>
            <td><input type="text" name="Year" /></td>
        </tr>
        <tr>
            <td>Image</td>
            <td><input type="text" name="Image" /></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><textarea name="Description"></textarea></td>
        </tr>
        <tr>
            <td>Genre</td>
            <td>
                <select name="GenreId">
                        @foreach (var item in genres)
                        {
                        <!option value="@item.GenreId">@item.Description</!option>
                        }
                </select>
            </td>

        </tr>
        <tr>
            <td></td>
            <td><button class="btn btn-success">Thêm</button></td>
        </tr>
        </form>

    </tbody>
</table>